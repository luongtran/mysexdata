<% provide(:title, "Sign in") %>
<h1>Send message</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(:message, url: message_path) do |f| %>

      <%= f.label :receiver %>
      <%= f.text_field :receiver %>

      <%= f.label :content %>
      <%= f.password_field :content %>

      <%= f.submit "Send", class: "btn btn-large btn-primary" %>
    <% end %>


  </div>
</div>